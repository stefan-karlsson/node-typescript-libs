{
  "name": "@aviene/core",
  "description": "Provides essential building block for building quality software",
  "version": "0.0.5",
  "author": {
    "name": "Stefan Karlsson",
    "email": "iam@stefan-karlsson.se",
    "url": "https://stefan-karlsson.se"
  },
  "bugs": {
    "url": "https://github.com/stefan-karlsson/node-typescript-libs/issues"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint ./src",
    "create:docs": "typedoc"
  },
  "dependencies": {
    "@aviene/common": "workspace:^",
    "@aviene/exceptions": "workspace:^"
  },
  "devDependencies": {
    "@aviene/eslint-config-node": "latest",
    "@aviene/eslint-config-typescript": "latest",
    "@aviene/typedoc-config-markdown": "latest",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^20.14.0",
    "typescript": "^5.4.4",
    "typedoc": "^0.25.13",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./app-context": {
      "types": "./dist/app-context.d.ts",
      "import": "./dist/app-context.js",
      "require": "./dist/app-context.cjs"
    },
    "./async-hooks": {
      "types": "./dist/async-hooks.d.ts",
      "import": "./dist/async-hooks.js",
      "require": "./dist/async-hooks.cjs"
    }
  },
  "keywords": [
    "ddd",
    "aviene"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/stefan-karlsson/node-typescript-libs.git"
  }
}
