{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node"]
  },
  "include": ["src", "./vite.config.ts"]
}
